{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ],
      "remote.otherPortsAttributes": {          
        "protocol": "https"
      },
      "settings": {
        "files.autoSave": "off"
      }
    }
  },
	"postCreateCommand": "git pull"
}